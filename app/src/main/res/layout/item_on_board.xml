<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView

        android:layout_marginTop="40dp"
        android:id="@+id/imgBoardItem"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="350dp"/>

    <TextView
        android:id="@+id/tvTitleBoardItem"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:text="@string/titleFirstString"
        app:layout_constraintTop_toBottomOf="@id/imgBoardItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvDesBoardItem"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="serif"
        android:text="@string/firstString"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tvTitleBoardItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>